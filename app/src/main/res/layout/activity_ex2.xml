<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ex2">

    <TableLayout
        android:shrinkColumns="*"
        android:stretchColumns="*"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="#000000">

        <TableRow
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp">

            <ImageButton
                android:background="#000000"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/onibus" />

            <ImageButton
                android:background="#000000"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/aviao" />

            <ImageButton
                android:background="#000000"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/bairros" />
        </TableRow>

        <TableRow
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp">

            <ImageButton
                android:background="#000000"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/turismo" />

            <ImageButton
                android:background="#000000"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/telefone" />

            <ImageButton
                android:background="#000000"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/taxi" />
        </TableRow>

        <TableRow
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp">

            <ImageButton
                android:background="#000000"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/cultura" />

            <ImageButton
                android:background="#000000"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/feriados" />

            <ImageButton
                android:background="#000000"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/sac" />

        </TableRow>

    </TableLayout>

  </RelativeLayout>